{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_export_vars,
    warn_unused_import,
    warn_keywords
]}.

{dialyzer, [
    {plt_apps, all_deps},
    incremental,
    {warnings, [unmatched_returns]}
]}.

{overrides, [
    {override, jose, [{erl_opts, [debug_info, no_warnings_as_errors]}]}
]}.

{deps, [
    {jsx, "3.1.0"},
    {jose, "1.11.11"},
    {hackney, "1.25.0"}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [id_token]}
]}.

{project_plugins, [
    {erlfmt, "1.7.0"},
    {rebar3_proper, "0.12.1"},
    {rebar3_lint, "4.1.1"}
]}.

{profiles, [
    {test, [
        {cover_enabled, true},
        {cover_opts, [verbose]},
        {erl_opts, [nowarn_export_all]},
        {deps, [
            {proper, "1.5.0"},
            {meck, "1.1.0"}
        ]}
    ]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{erlfmt, [
    write,
    {files, ["**/*.{hrl,erl,app.src,config}"]},
    {exclude_files, ["_build/**", ".direnv/**", ".github/**", "doc/**"]}
]}.
